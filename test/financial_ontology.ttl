@prefix fin: <http://www.example.com/financial-ontology#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

fin:Capital_Allocation_Policy a rdfs:Class ;
    rdfs:comment "An Organization's stated strategy for deploying capital." .

fin:Competitive_Advantage a rdfs:Class ;
    rdfs:comment "A factor providing a long-term advantage over competitors (Moat)." .

fin:Corporate_Event a rdfs:Class ;
    rdfs:comment "A significant occurrence or announcement involving an Organization." .

fin:Financial_Instrument a rdfs:Class ;
    rdfs:comment "A contract giving rise to a financial liability, such as debt." .

fin:Financial_Metric a rdfs:Class ;
    rdfs:comment "A quantitative data point on financial performance, valuation, or efficiency." .

fin:Market a rdfs:Class ;
    rdfs:comment "The industry or economic sector where organizations compete." .

fin:Organization a rdfs:Class ;
    rdfs:comment "A business, governmental, or regulatory entity." .

fin:Person a rdfs:Class ;
    rdfs:comment "An individual in a leadership or governance role." .

fin:Product_Service a rdfs:Class ;
    rdfs:comment "An offering commercialized by an Organization." .

fin:Regulatory_Body a rdfs:Class ;
    rdfs:comment "A government agency that exercises a regulatory function." ;
    rdfs:subClassOf fin:Organization .

fin:Risk_Factor a rdfs:Class ;
    rdfs:comment "A potential threat to an Organization's performance or valuation." .

fin:Role a rdfs:Class ;
    rdfs:comment "An association class representing a Person holding a position at an Organization." .

fin:acquires a rdf:Property ;
    rdfs:comment "Relates an acquiring Organization to a target Organization." ;
    rdfs:domain fin:Organization ;
    rdfs:range fin:Organization .

fin:advantage_type a rdf:Property ;
    rdfs:comment "The type of competitive advantage (e.g., Network Effects)." ;
    rdfs:domain fin:Competitive_Advantage ;
    rdfs:range xsd:string .

fin:business_segment a rdf:Property ;
    rdfs:comment "The business segment a product or service belongs to." ;
    rdfs:domain fin:Product_Service ;
    rdfs:range xsd:string .

fin:competes_with a rdf:Property ;
    rdfs:comment "A symmetric relationship between two competing Organizations." ;
    rdfs:domain fin:Organization ;
    rdfs:range fin:Organization .

fin:divests a rdf:Property ;
    rdfs:comment "Relates an Organization to a Product or Service it has sold off." ;
    rdfs:domain fin:Organization ;
    rdfs:range fin:Product_Service .

fin:dividend_policy a rdf:Property ;
    rdfs:comment "Description of the organization's dividend policy." ;
    rdfs:domain fin:Capital_Allocation_Policy ;
    rdfs:range xsd:string .

fin:end_date a rdf:Property ;
    rdfs:comment "The date a role concluded." ;
    rdfs:domain fin:Role ;
    rdfs:range xsd:date .

fin:event_date a rdf:Property ;
    rdfs:comment "The date of a corporate event." ;
    rdfs:domain fin:Corporate_Event ;
    rdfs:range xsd:date .

fin:event_type a rdf:Property ;
    rdfs:comment "The type of event (e.g., Acquisition, Divestiture, Earnings Report)." ;
    rdfs:domain fin:Corporate_Event ;
    rdfs:range xsd:string .

fin:fiscal_period a rdf:Property ;
    rdfs:comment "The fiscal period the metric applies to (e.g., Q2 2025)." ;
    rdfs:domain fin:Financial_Metric ;
    rdfs:range xsd:string .

fin:has_adviser a rdf:Property ;
    rdfs:comment "Connects an Organization to a Person serving as an adviser." ;
    rdfs:domain fin:Organization ;
    rdfs:range fin:Person .

fin:has_policy a rdf:Property ;
    rdfs:comment "Links an Organization to its capital deployment strategy." ;
    rdfs:domain fin:Organization ;
    rdfs:range fin:Capital_Allocation_Policy .

fin:has_role a rdf:Property ;
    rdfs:comment "Connects a Person to their various roles (past and present)." ;
    rdfs:domain fin:Person ;
    rdfs:range fin:Role .

fin:held_at a rdf:Property ;
    rdfs:comment "Connects a Role to the Organization where it is held." ;
    rdfs:domain fin:Role ;
    rdfs:range fin:Organization .

fin:interest_rate_terms a rdf:Property ;
    rdfs:comment "Terms of the interest rate (e.g., 4.625% Fixed)." ;
    rdfs:domain fin:Financial_Instrument ;
    rdfs:range xsd:string .

fin:involves_person a rdf:Property ;
    rdfs:comment "Connects a Corporate_Event to a Person involved in it." ;
    rdfs:domain fin:Corporate_Event ;
    rdfs:range fin:Person .

fin:is_exposed_to a rdf:Property ;
    rdfs:comment "Connects an Organization to a Risk Factor." ;
    rdfs:domain fin:Organization ;
    rdfs:range fin:Risk_Factor .

fin:is_led_by a rdf:Property ;
    rdfs:comment "Connects an Organization to a Person in a leadership role." ;
    rdfs:domain fin:Organization ;
    rdfs:range fin:Person .

fin:is_subject_of a rdf:Property ;
    rdfs:comment "Links an Organization to an event concerning it." ;
    rdfs:domain fin:Organization ;
    rdfs:range fin:Corporate_Event .

fin:maturity_date a rdf:Property ;
    rdfs:comment "The maturity date of a financial instrument." ;
    rdfs:domain fin:Financial_Instrument ;
    rdfs:range xsd:date .

fin:metric_name a rdf:Property ;
    rdfs:comment "The name of the financial metric (e.g., Revenue, P/E Ratio)." ;
    rdfs:domain fin:Financial_Metric ;
    rdfs:range xsd:string .

fin:metric_value a rdf:Property ;
    rdfs:comment "The numerical value of the financial metric." ;
    rdfs:domain fin:Financial_Metric ;
    rdfs:range xsd:float .

fin:name a rdf:Property ;
    rdfs:comment "A string representing the name of an entity." ;
    rdfs:range xsd:string .

fin:operates_in a rdf:Property ;
    rdfs:comment "Connects an Organization to a Market it operates within." ;
    rdfs:domain fin:Organization ;
    rdfs:range fin:Market .

fin:organization_type a rdf:Property ;
    rdfs:comment "The type of organization (e.g., Public Company, Regulatory Body)." ;
    rdfs:domain fin:Organization ;
    rdfs:range xsd:string .

fin:possesses a rdf:Property ;
    rdfs:comment "Links an Organization to its Competitive Advantage (Moat)." ;
    rdfs:domain fin:Organization ;
    rdfs:range fin:Competitive_Advantage .

fin:produces a rdf:Property ;
    rdfs:comment "Links an Organization to a Product or Service it offers." ;
    rdfs:domain fin:Organization ;
    rdfs:range fin:Product_Service .

fin:projected_growth_rate_CAGR a rdf:Property ;
    rdfs:comment "The projected Compound Annual Growth Rate for a market." ;
    rdfs:domain fin:Market ;
    rdfs:range xsd:float .

fin:reason a rdf:Property ;
    rdfs:comment "The reason for a corporate event (e.g., 'personal reasons', 'retirement')." ;
    rdfs:domain fin:Corporate_Event ;
    rdfs:range xsd:string .

fin:reports a rdf:Property ;
    rdfs:comment "Connects an event (like an earnings call) to the financial metrics disclosed." ;
    rdfs:domain fin:Corporate_Event ;
    rdfs:range fin:Financial_Metric .

fin:risk_type a rdf:Property ;
    rdfs:comment "The category of risk (e.g., Operational, Legal, Macroeconomic)." ;
    rdfs:domain fin:Risk_Factor ;
    rdfs:range xsd:string .

fin:role_title a rdf:Property ;
    rdfs:comment "The title of a role (e.g., 'CEO', 'CFO')." ;
    rdfs:domain fin:Role ;
    rdfs:range xsd:string .

fin:source a rdf:Property ;
    rdfs:comment "The source of the information (e.g., a URL to a press release)." ;
    rdfs:range xsd:string .

fin:start_date a rdf:Property ;
    rdfs:comment "The date a role became effective." ;
    rdfs:domain fin:Role ;
    rdfs:range xsd:date .

fin:ticker_symbol a rdf:Property ;
    rdfs:comment "The stock market ticker symbol for a public company." ;
    rdfs:domain fin:Organization ;
    rdfs:range xsd:string .

fin:utilizes a rdf:Property ;
    rdfs:comment "Connects an Organization to a financial instrument like debt." ;
    rdfs:domain fin:Organization ;
    rdfs:range fin:Financial_Instrument .

